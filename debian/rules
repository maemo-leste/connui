#!/usr/bin/make -f

DEB_CONFIGURE_EXTRA_FLAGS = --disable-static --prefix=/usr --sysconfdir=/etc --libdir=/usr/lib

CFLAGS += -Werror

override_dh_auto_configure:
	dh_auto_configure -- $(DEB_CONFIGURE_EXTRA_FLAGS)

autoreconf:
	./autogen.sh

override_dh_autoreconf:
	dh_autoreconf debian/rules -- autoreconf

%:
	dh $@ --with autoreconf
